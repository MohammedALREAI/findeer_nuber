{
  "name": "mapme",
  "version": "1.0.0",
  "description": "simple node with typescript and graphql",
  "main": "index.js",
  "author": "Mohammed AlReai",
  "license": "MIT",
  "scripts": {
    "predev": "yarn run types",
    "dev": "cd src && nodemon --exec ts-node index.ts -e ts,graphql",
    "pretype": "gql-merge -o ./src/schema.graphql ./src/api/**/*.graphql",
    "type": "nodemon --exec graphql-to-typescript src/schema.graphql ./src/types/graph.d.ts",
    "prebuild": "rm -rf dist",
    "build": "tsc -p",
    "postbuild": "cd src && copy ./api/**/*.graphql ../dist/api",
    "start": "cd dist && node ."
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.7",
    "@types/helmet": "^0.0.48",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mailgun-js": "^0.22.10",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.11.2",
    "@types/twilio": "^2.11.0",
    "babel-runtime": "^6.26.0",
    "gql-merge": "^0.0.6",
    "graphql-to-typescript": "^0.1.2",
    "nodemon": "^2.0.4",
    "ts-node": "^9.0.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.13",
    "prettier": "^2.1.1",
     "eslint-plugin-prettier": "3.1.4"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "class-validator": "^0.12.2",
    "copy": "^0.3.2",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "graphql": "^15.3.0",
    "graphql-tools": "^6.2.4",
    "graphql-yoga": "^1.18.3",
    "helmet": "^4.1.1",
    "jsonwebtoken": "^8.5.1",
    "mailgun-js": "^0.22.0",
    "merge-graphql-schemas": "^1.7.8",
    "morgan": "^1.10.0",
    "pg": "^8.3.3",
    "reflect-metadata": "^0.1.13",
    "twilio": "^3.49.4",
    "typeorm": "^0.2.28"
  },
   "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --staged",
      "pre-push": "yarn lint",
      "post-rebase": "yarn install"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
